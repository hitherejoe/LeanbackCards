<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoadingCardStyle">
        <item name="loading_background_color">@color/default_header</item>
    </style>

    <style name="TagCardStyle">
        <item name="tag_background_color">@color/default_header</item>
        <item name="tag_text_color">@color/white</item>
        <item name="tag_icon">@drawable/ic_tag</item>
    </style>

    <style name="IconCardStyle">
        <item name="icon_title_background_color">@color/default_header</item>
        <item name="icon_detail_background_color">@color/default_detail</item>
        <item name="icon_title_text_color">@color/white</item>
        <item name="icon_detail_text_color">@color/white</item>
        <item name="icon_header_icon">@drawable/ic_tag</item>
    </style>

    <style name="LiveCardStyle">
        <item name="live_background_color">@color/default_header</item>
        <item name="live_text_color">@color/white</item>
    </style>

</resources>
